    %% Left - Inputs
    User[["User"]]
    President[["President"]]
    Secretary[["Secretary"]]

    %% Center - Processes
    P11(("1.1<br/>Account<br/>Management"))
    P12(("1.2<br/>Authentication"))
    P14(("1.4<br/>Role<br/>Validation"))
